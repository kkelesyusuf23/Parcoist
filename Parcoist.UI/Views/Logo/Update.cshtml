@model Parcoist.DTO.LogoDtos.UpdateLogoDto

@{
    ViewData["Title"] = "Logo Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Logo Güncelle</h2>

    <form asp-action="Update" asp-controller="Logo" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="LogoID" />

        <div class="mb-3">
            <label class="form-label">Mevcut Logo</label><br />
            <img src="@ViewBag.LogoImage" alt="Eski Logo" style="max-height: 80px;" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="LogoImage" class="form-label">Yeni Logo (Opsiyonel)</label>
            <input asp-for="LogoImage" type="file" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="LogoTitle" class="form-label">Logo Başlığı</label>
            <input asp-for="LogoTitle" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="LogoLink" class="form-label">Logo Linki</label>
            <input asp-for="LogoLink" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>
