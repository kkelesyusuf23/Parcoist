@using Parcoist.DTO.UserCommentDtos
@model CreateUserCommentDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Yeni Yorum Ekle</h2>

    <form asp-action="Add" method="post">
        <div class="form-group mb-3">
            <label asp-for="ProductID">Ürün</label>
            <select asp-for="ProductID" class="form-control"
                    asp-items="@(ViewBag.ProductList as SelectList)">
                <option value="">-- Ürün Seçin --</option>
            </select>
            <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Yorum Başlığı</label>
            <input asp-for="Description" class="form-control" placeholder="Yorum başlığı" />
        </div>

        <div class="form-group">
            <label>Yorum</label>
            <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Yorumunuz..."></textarea>
        </div>

        <button type="submit" class="btn btn-success mt-3">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
    </form>
</div>
