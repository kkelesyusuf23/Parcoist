@model Parcoist.DTO.FeatureTypeDtos.CreateFeatureTypeDto
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Yeni Özellik Türü Ekle</h2>

    <form asp-action="Add" asp-controller="FeatureType" method="post">
        <div class="form-group mb-3">
            <label asp-for="Value" class="form-label">Özellik Adı</label>
            <input asp-for="Value" class="form-control" placeholder="Örn: Renk, Beden, Boyut" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PriceAdjustment" class="form-label">Fiyat Etkisi</label>
            <input asp-for="PriceAdjustment" class="form-control" type="number" />
            <span asp-validation-for="PriceAdjustment" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>

