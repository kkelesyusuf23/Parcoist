@using Parcoist.DTO.FeatureTypeDtos
@model UpdateFeatureTypeDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Özellik Türü Güncelle</h2>

    <form asp-action="Update" asp-controller="FeatureType" method="post">
        <input type="hidden" asp-for="FeatureTypeID" />

        <div class="form-group mb-3">
            <label asp-for="Value" class="form-label">Özellik Adı</label>
            <input asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PriceAdjustment" class="form-label">Fiyat Etkisi</label>
            <input asp-for="PriceAdjustment" class="form-control" type="number" />
            <span asp-validation-for="PriceAdjustment" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-success">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>

