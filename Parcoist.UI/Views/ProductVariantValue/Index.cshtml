@using Parcoist.UI.Entities
@model List<ProductVariantValue>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container" style="height: 100%; overflow-x: hidden; overflow-y: scroll;">

    <table class="table table-hover mt-3" id="example">
        <thead>
            <tr>

                <th>#</th>
                <th>Kombinasyon</th>
                <th>Özellik Türü</th>
                <th>Özellik Değeri</th>
                @* <th>Durum</th> *@
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(Model.IndexOf(item) + 1)</td>
                        <td>@item.CombinationID</td>
                        <td>@item.FeatureTypeID</td>
                        <td>@item.FeatureValueID</td>
                        @* <td>@item.IsActive</td> *@
                        <td><a href="/ProductVariantValue/Delete/@item.ProductVariantValueID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/ProductVariantValue/Update/@item.ProductVariantValueID" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Hiç Product Variant Value verisi bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="/ProductVariantValue/Add" class="btn btn-outline-info">Yeni ProductVariantValue Ekle</a>

