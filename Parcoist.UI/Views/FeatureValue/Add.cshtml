@using Parcoist.DTO.FeatureValueDtos
@model CreateFeatureValueDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Özellik Değeri Ekle</h2>

    <form asp-action="Add" asp-controller="FeatureValue" method="post">
        <div class="form-group mb-3">
            <label asp-for="FeatureTypeID" class="form-label">Özellik Türü</label>
            <select asp-for="FeatureTypeID" asp-items="ViewBag.FeatureTypes" class="form-select">
                <option value="">Seçiniz</option>
            </select>
            <span asp-validation-for="FeatureTypeID" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Value" class="form-label">Değer</label>
            <input asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PriceAdjustment" class="form-label">Fiyat Etkisi</label>
            <input asp-for="PriceAdjustment" class="form-control" type="number" />
            <span asp-validation-for="PriceAdjustment" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Stock" class="form-label">Stok</label>
            <input asp-for="Stock" class="form-control" type="number" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Ekle</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>
