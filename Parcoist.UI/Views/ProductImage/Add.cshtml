@using Parcoist.DTO.ProductImage
@model CreateProductImageDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-4">
    <h2 class="mb-4">Yeni Ürün Görseli Ekle</h2>

    <form asp-action="Add" asp-controller="ProductImage" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group mb-3">
                    <label asp-for="ProductID">Ürün</label>
                    <select asp-for="ProductID" class="form-control"
                            asp-items="@(ViewBag.ParentProduct as SelectList)">
                        <option value="">-- Ürün Seçin --</option>
                    </select>
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Order">Görsel Sırası</label>
                    <input asp-for="Order" class="form-control" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="logoFile">Görsel Yükle</label>
                    <input type="file" name="logoFile" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a href="/ProductImage/Index" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </div>
    </form>
</div>
