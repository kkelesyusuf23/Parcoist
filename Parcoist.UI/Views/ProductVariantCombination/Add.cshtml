@using Parcoist.DTO.ProductVariantCombinationDtos
@model CreateProductVariantCombinationDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-4">
    <h2 class="mb-4">Varyant Kombinasyonu Ekle</h2>

    <form asp-action="Add" asp-controller="ProductVariantCombination" method="post">
        <div class="form-group mb-3">
            <label asp-for="ProductID">Ürün</label>
            <select asp-for="ProductID" asp-items="ViewBag.ParentProduct" class="form-control">
                <option value="">-- Ürün Seçin --</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="VariantKey">Varyant Anahtarı</label>
            <input asp-for="VariantKey" class="form-control" placeholder="Örnek: Kırmızı-M" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Stock">Stok</label>
            <input asp-for="Stock" class="form-control" type="number" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="PriceAdjustment">Fiyat Farkı</label>
            <input asp-for="PriceAdjustment" class="form-control" type="number" />
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
