@using Parcoist.DTO.SliderDtos
@model CreateSliderDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Yeni Slider Ekle</h2>

    <form asp-action="Add" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Başlık</label>
            <input asp-for="SliderTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label>Açıklama</label>
            <textarea asp-for="SliderDescription" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Slider Görseli</label>
            <input type="file" name="logoFile" class="form-control" />
        </div>

        <div class="form-group">
            <label>Link</label>
            <input asp-for="SliderLink" class="form-control" />
        </div>

        <div class="form-group">
            <label>Link Başlığı</label>
            <input asp-for="SliderLinkTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label>Sıra</label>
            <input asp-for="SliderOrder" type="number" class="form-control" />
        </div>


        <button type="submit" class="btn btn-success mt-3">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
    </form>
</div>
