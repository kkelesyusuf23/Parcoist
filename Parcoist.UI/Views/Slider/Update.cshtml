@using Parcoist.DTO.SliderDtos
@model UpdateSliderDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-4">
    <h2>Slider Güncelle</h2>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="SliderID" />
        <input type="hidden" asp-for="SliderImage" />

        <div class="form-group">
            <label>Başlık</label>
            <input asp-for="SliderTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label>Açıklama</label>
            <textarea asp-for="SliderDescription" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Mevcut Görsel</label><br />
            @if (!string.IsNullOrEmpty(Model.SliderImage))
            {
                <img src="@Model.SliderImage" width="200" class="img-thumbnail mb-2" />
            }
        </div>

        <div class="form-group">
            <label>Yeni Görsel Yükle</label>
            <input type="file" name="logoFile" class="form-control" />
        </div>

        <div class="form-group">
            <label>Link</label>
            <input asp-for="SliderLink" class="form-control" />
        </div>

        <div class="form-group">
            <label>Link Başlığı</label>
            <input asp-for="SliderLinkTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label>Sıra</label>
            <input asp-for="SliderOrder" type="number" class="form-control" />
        </div>

        <div class="form-group form-check mt-2">
            <input asp-for="SliderStatus" class="form-check-input" />
            <label class="form-check-label" asp-for="SliderStatus">Aktif</label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
    </form>
</div>
