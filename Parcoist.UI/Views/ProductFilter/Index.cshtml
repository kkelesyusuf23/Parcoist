@model ProductFilterViewModel
@{
    ViewData["Title"] = "Ürün Filtreleme";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container">
    <div class="page-banner">
        <h2>ÜRÜNLER</h2>
    </div>    <div class="row">
        <div class="col-md-3">
            <div class="filter-sidebar">
                <h4>Filtrele</h4>
                <form method="get" asp-controller="ProductFilter" asp-action="Index">
                    <div class="filter-category">
                        <label for="category">Kategori</label>
                        <select id="category" name="categoryId" class="form-control" style="height:40px">
                            <option value="" selected="@(Model.SelectedCategoryId == null ? "selected" : null)">Tümü</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.CategoryID" selected="@(Model.SelectedCategoryId == category.CategoryID ? "selected" : null)" > 
                                    @category.CategoryName
                                </option>
                            }
                        </select>

                    </div> 
                    <label>Marka</label>
                    <div class="filter-brand mt-4" style="height: 150px; overflow-x: hidden; overflow-y: scroll;">
                       
                        <div class="form-check">
                            <input type="radio" name="brand" value="" @(string.IsNullOrEmpty(Model.SelectedBrand) ? "checked" : "") class="form-check-input">
                            <label class="form-check-label">Tümü</label>
                        </div>
                        @foreach (var brand in Model.Brands)
                        {
                            <div class="form-check">
                                <input type="radio" name="brand" value="@brand" @(Model.SelectedBrand == brand ? "checked" : "") class="form-check-input">
                                <label class="form-check-label">@brand</label>
                            </div>
                        }
                    </div>
                    <div class="filter-price mt-4">
                        <div class="price-range">
                            <div class="form-group">
                                <label for="minPrice">Min Fiyat:</label>
                                <input type="number" id="minPrice" name="minPrice" class="form-control" placeholder="Min Fiyat" value="@Model.MinPrice" />
                            </div>
                            <div class="form-group">
                                <label for="maxPrice">Max Fiyat:</label>
                                <input type="number" id="maxPrice" name="maxPrice" class="form-control" placeholder="Max Fiyat" value="@Model.MaxPrice" />
                            </div>

                            
                        </div>
                        <div class="quick-price-buttons mt-3">
                            <label>Hızlı Fiyat Filtreleri:</label>
                            <div class="btn-group w-100" role="group">
                                <button type="button" class="btn btn-outline-secondary hizli-fiyat" onclick="setPrice(0, 500)">500 TL ve altı</button>
                                <button type="button" class="btn btn-outline-secondary hizli-fiyat" onclick="setPrice(0, 1000)">1000 TL ve altı</button>
                                <button type="button" class="btn btn-outline-secondary hizli-fiyat" onclick="setPrice(0, 2000)">2000 TL ve altı</button>
                                <button type="button" class="btn btn-outline-secondary hizli-fiyat" onclick="setPrice(0, 3000)">3000 TL ve altı</button>
                                <button type="button" class="btn btn-outline-secondary hizli-fiyat" onclick="setPrice(0, 4000)">4000 TL ve altı</button>
                                <button type="button" class="btn btn-outline-secondary hizli-fiyat" onclick="setPrice(0, 5000)">5000 TL ve altı</button>
                                <button type="button" class="btn btn-outline-secondary hizli-fiyat" onclick="setPrice(0, 6000)">6000 TL ve altı</button>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3 w-100">Filtrele</button>
                </form>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4 mb-4" style="margin-bottom:5px"> 
                        <div class="product-card shadow-sm p-3 rounded">
                            <img src="@product.FirstImageUrl" alt="@product.Name" class="img-fluid rounded">
                            <div class="product-info text-center">
                                <h5>@product.Name</h5>
                                <h5 class="product-price">
                                    <span class="old-price">@product.BasePrice.ToString("C")</span>
                                    <span class="new-price">@product.DiscountedPrice.ToString("C")</span>
                                </h5>
                                <a href="@Url.Action("Details", "Product", new { id = product.ProductID })" class="btn btn-info btn-sm">Detay</a>
                                @* <a href="@Url.Action("AddToCart", "Cart", new { id = product.ProductID })" class="btn btn-success btn-sm">Sepete Ekle</a> *@
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function setPrice(min, max) {
        document.getElementById('minPrice').value = min;
        document.getElementById('maxPrice').value = max;
        // Formu otomatik gönder
        document.querySelector('form').submit();
    }
</script>
<style>
    .product-price {
        display: flex;
        gap: 8px;
        align-items: center;
    }

        .product-price .old-price {
            text-decoration: line-through;
            color: #888;
            font-size: 14px;
        }

        .product-price .new-price {
            color: #e60023; /* Kırmızı tonlu indirim rengi */
            font-weight: bold;
            font-size: 16px;
        }


    .page-banner {
        position: relative;
        text-align: center;
        padding: 60px 20px; /* Banner yüksekliği ve iç boşluk */
        margin-bottom: 30px;
        border-radius: 15px;
        box-shadow: 0 6px 16px rgba(0,0,0,0.1);
        border: 2px solid #ddd;
        /* Arka plan ayarları */
        background-color: #00704A; /* Resim yüklenmezse görünür */
        background-image: url('/assest/images/sabit/4.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover; /* resmi alana orantılı şekilde sığdırır */
        min-height: 200px; /* yükseklik ver ki resim alanı gözüksün */
    }


        .page-banner.with-bg {
            background: url('/assest/images/sabit/4.jpg'); 
            border: none; 
        }

        .page-banner h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #fff; 
            text-shadow: 2px 2px 6px rgba(0,0,0,0.3); 
            margin: 0;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-banner

    {
        padding: 40px 15px;
    }

    .page-banner h2 {
        font-size: 1.8rem;
    }

    }
</style>

<style>

    .hizli-fiyat{
        border-radius:8px;
        margin:0 2px 3px 0;
        font-size:12px;
    }
    .price-range {
        display: flex;
        gap: 10px; /* Alanlar arası boşluk */
    }

        .price-range .form-group {
            flex: 1; /* Eşit genişlik */
        }

        .price-range input {
            width: 100%; /* input kutusunu kapsayan alana yay */
        }

    /* Genel Yapı */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Başlık */
    h2 {
        font-weight: 700;
        color: #333;
        margin-bottom: 25px;
    }

    /* Filtre Sidebar */
    .filter-sidebar {
        background-color: #f9f9f9;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
        position: sticky;
        top: 20px;
    }

        .filter-sidebar h4 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            font-weight: bold;
            color: #222;
        }

    /* Filtre Alanları */
    .filter-category,
    .filter-brand,
    .filter-price {
        margin-bottom: 30px;
    }

        .filter-category label,
        .filter-brand label,
        .filter-price label {
            font-size: 1rem;
            font-weight: 600;
            color: #444;
        }

        /* Dropdown */
        .filter-category select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 10px;
            font-size: 1rem;
            margin-top: 8px;
            transition: border-color 0.3s ease;
            background-color: #fff;
        }

            .filter-category select:focus {
                border-color: #4e73df;
                outline: none;
            }

    /* Radio Seçim */
    .form-check-input {
        width: 18px;
        height: 18px;
        margin-top: 4px;
        cursor: pointer;
    }

    .form-check-label {
        font-size: 1rem;
        color: #444;
        margin-left: 6px;
        cursor: pointer;
    }

    .form-check input[type="radio"]:checked + .form-check-label {
        font-weight: bold;
        color: #4e73df;
    }

    /* Fiyat Aralıkları */
    .filter-price input {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 1rem;
        margin-top: 8px;
        transition: border-color 0.3s ease;
        background-color: #fff;
    }

        .filter-price input:focus {
            border-color: #4e73df;
            outline: none;
        }

    /* Fiyat Buton Görünümü */
    .filter-price .form-check {
        margin-top: 10px;
    }

    .filter-price .form-check-input {
        margin-top: 0;
    }

    .filter-price .form-check-label {
        background-color: #f1f1f1;
        padding: 8px 12px;
        border-radius: 20px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .filter-price input[type="radio"]:checked + .form-check-label {
        background-color: #4e73df;
        color: white;
        font-weight: bold;
    }

    /* Filtrele Butonu */
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
        padding: 12px;
        font-size: 1.1rem;
        border-radius: 10px;
        width: 100%;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2e59d9;
            border-color: #2e59d9;
        }

    /* Ürün Kartları */
    .product-card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .product-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-bottom: 1px solid #eee;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

    /* Ürün Bilgisi */
    .product-info {
        padding: 15px;
        text-align: center;
    }

        .product-info h5 {
            font-size: 1.1rem;
            font-weight: 600;
            color: #222;
            margin-bottom: 10px;
        }

        .product-info p {
            font-size: 1rem;
            color: #666;
            margin-bottom: 15px;
        }

        .product-info .btn-info {
            font-size: 0.95rem;
            padding: 8px 12px;
            width: 100%;
            margin-top: 5px;
            border-radius: 8px;
            background-color: #17a2b8;
            border-color: #17a2b8;
            transition: background-color 0.3s ease;
        }

            .product-info .btn-info:hover {
                background-color: #138496;
                border-color: #138496;
            }

    /* Responsive */
    @@media (max-width: 992px) {
        .col-md-3, .col-md-9

    {
        margin-bottom: 20px;
    }

    .product-card img {
        height: 180px;
    }

    }

    @@media (max-width: 768px) {
        .container

    {
        padding-left: 15px;
        padding-right: 15px;
    }

    .product-card {
        border-radius: 12px;
    }

    .filter-sidebar {
        margin-bottom: 25px;
    }

    .product-info h5 {
        font-size: 1rem;
    }

    .product-info p {
        font-size: 0.9rem;
    }

    }
</style>
