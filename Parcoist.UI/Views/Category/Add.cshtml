@using Parcoist.DTO.CategoryDtos
@model CreateCategoryDto
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-4">
    <h2 class="mb-4">Yeni Kategori Ekle</h2>

    <form asp-action="Add" asp-controller="Category" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CategoryDescription" class="form-label">Açıklama</label>
            <textarea asp-for="CategoryDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Kategori Görseli</label>
            <input type="file" name="logoFile" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ParentCategoryID" class="form-label">Üst Kategori</label>
            <select asp-for="ParentCategoryID" class="form-control" asp-items="ViewBag.ParentCategories">
                <option value="">-- Üst kategori seçiniz --</option>
            </select>
            <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>
