@using Parcoist.DTO.CategoryDtos
@model UpdateCategoryDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container mt-4">
    <h2 class="mb-4">Kategori Güncelle</h2>

    <form asp-action="Update" asp-controller="Category" method="post" enctype="multipart/form-data">
        @* ID gizli olarak gönderilir *@
        <input type="hidden" asp-for="CategoryID" />

        <div class="form-group mb-3">
            <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CategoryDescription" class="form-label">Açıklama</label>
            <textarea asp-for="CategoryDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Mevcut Görsel</label><br />
            @if (!string.IsNullOrEmpty(Model.CategoryImage))
            {
                <img src="~/@Model.CategoryImage" alt="Kategori Görseli" style="max-width:150px;" class="mb-2" />
            }
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Yeni Görsel Seç (Opsiyonel)</label>
            <input type="file" name="logoFile" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ParentCategoryID" class="form-label">Üst Kategori</label>
            <select asp-for="ParentCategoryID" class="form-control" asp-items="ViewBag.ParentCategories">
                <option value="">-- Üst kategori seçiniz --</option>
            </select>
            <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>


