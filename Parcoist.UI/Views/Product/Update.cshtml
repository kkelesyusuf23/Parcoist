@using Parcoist.DTO.ProductDtos
@model UpdateProductDto

@{
    ViewData["Title"] = "Ürünü Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Ürünü Güncelle</h2>

    <form asp-action="Update" asp-controller="Product" method="post">
        <input type="hidden" asp-for="ProductID" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="SKU"></label>
                <input asp-for="SKU" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="ModelNo"></label>
                <input asp-for="ModelNo" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            
            <div class="col-md-6 mb-3">
                <label asp-for="CategoryID">Kategori</label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="BrandID">Marka</label>
                <select asp-for="BrandID" class="form-control" asp-items="ViewBag.Brands">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="BrandID" class="text-danger"></span>
            </div>



            <div class="col-md-6 mb-3">
                <label asp-for="BasePrice"></label>
                <input asp-for="BasePrice" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="CostPrice"></label>
                <input asp-for="CostPrice" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DiscountedPrice"></label>
                <input asp-for="DiscountedPrice" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Link1"></label>
                <input asp-for="Link1" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Link2"></label>
                <input asp-for="Link2" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Link3"></label>
                <input asp-for="Link3" class="form-control" />
            </div>

            <div class="col-md-6 mb-3 d-flex align-items-center">
                <div class="form-check form-switch">
                    <input asp-for="IsFeatured" class="form-check-input" />
                    <label asp-for="IsFeatured" class="form-check-label"></label>
                </div>
            </div>

            <div class="col-md-6 mb-3 d-flex align-items-center">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Aktif</label>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a href="/Product/Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>
