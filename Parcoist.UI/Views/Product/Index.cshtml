@using Parcoist.UI.Entities
@model List<Product>

@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Ürünler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Ürünler</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container" style="height: 100%; overflow-x: auto;">
    <table class="table table-bordered table-striped mt-3" id="example">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Model No</th>
                <th>Slug</th>
                <th>Kategori ID</th>
                <th>Fiyat</th>
                <th>İndirimli</th>
                <th>Stok</th>
                <th>Marka</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(Model.IndexOf(item) + 1)</td>
                        <td>@item.Name</td>
                        <td>@item.ModelNo</td>
                        <td>@item.Slug</td>
                        <td>@item.CategoryID</td>
                        <td>@item.BasePrice ₺</td>
                        <td>@item.DiscountedPrice ₺</td>
                        <td>@item.Stock</td>
                        <td>@item.BrandID</td>
                        <td>
                            @(item.IsActive ? "Aktif" : "Pasif")
                        </td>
                        <td>
                            <a href="/Product/Update/@item.ProductID" class="btn btn-sm btn-success">Güncelle</a>
                            <a href="/Product/Delete/@item.ProductID" class="btn btn-sm btn-danger ms-1">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="11" class="text-center">Hiç ürün bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="/Product/Add" class="btn btn-primary mt-3">Yeni Ürün Ekle</a>
