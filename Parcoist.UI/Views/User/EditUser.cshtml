@model UpdateUserViewModel

@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Kullanıcı Güncelle</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserID" />

    <div class="form-group">
        <label>Ad</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input class="form-control" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input class="form-control" asp-for="Phone" />
    </div>
    <div class="form-group">
        <label>Doğum Tarihi</label>
        <input class="form-control" type="date" asp-for="BirthDate" />
    </div>
    <div class="form-group">
        <label>Rol</label>
        <select class="form-control" asp-for="RoleID" asp-items="@(new SelectList(ViewBag.Roles, "RoleID", "RoleName"))"></select>
    </div>
    <div class="form-group">
        <label>Durum</label>
        <select class="form-control" asp-for="IsActive">
            <option value="true">Aktif</option>
            <option value="false">Pasif</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
