@using Parcoist.UI.Entities
@model List<User>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Kullanıcılar</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.Name @user.Surname</td>
                <td>@user.Email</td>
                <td>@user.Role.RoleName</td>
                <td>@(user.IsActive ? "Aktif" : "Pasif")</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditUser", new { id = user.UserID })">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

