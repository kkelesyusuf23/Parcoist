@using Parcoist.UI.Entities
@model List<User>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    /* Blur arkaplan */
    .modal-backdrop.blur {
        backdrop-filter: blur(5px);
    }

    .password-group {
        display: flex;
        gap: 10px;
        align-items: center;
    }
</style>

<h2 class="mb-4">Kullanıcılar</h2>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Email</td>
                <td>@user.Role.RoleName</td>
                <td>
                    <a href="/User/EditUser/@user.UserID" class="btn btn-sm btn-primary me-1">Düzenle</a>
                    <button class="btn btn-sm btn-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#changePasswordModal"
                            data-userid="@user.UserID"
                            data-username="@user.Name @user.Surname">
                        Şifre Değiştir
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Şifre Değiştir Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow-lg border-0 rounded-4">
            <form id="changePasswordForm" method="post" asp-action="ChangePassword" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" id="UserID" name="UserID" />

                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">Şifre Değiştir</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p><strong>Kullanıcı:</strong> <span id="UserName"></span></p>

                    <div class="mb-3 password-group">
                        <input type="password" class="form-control" id="NewPassword" name="NewPassword" placeholder="Yeni Şifre" required minlength="6" />
                        <button type="button" class="btn btn-outline-primary" id="btnGeneratePassword" title="Rastgele şifre oluştur">🔑</button>
                        <button type="button" class="btn btn-outline-secondary" id="btnTogglePassword" title="Şifreyi göster/gizle">👁️</button>
                        <div class="invalid-feedback">
                            Şifre en az 6 karakter olmalı.
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="button" class="btn btn-danger" id="btnConfirmChange">Şifreyi Değiştir</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Emin misiniz? Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-4">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Onay</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Şifreyi değiştirmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
                <button type="button" class="btn btn-danger" id="btnConfirmYes">Evet</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var changeModal = document.getElementById('changePasswordModal');
        var confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
        var form = document.getElementById('changePasswordForm');

        // Modal açılırken kullanıcı bilgilerini doldur
        if (changeModal) {
            changeModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var userId = button.getAttribute('data-userid');
                var userName = button.getAttribute('data-username');

                changeModal.querySelector('input[name="UserID"]').value = userId;
                changeModal.querySelector('#UserName').textContent = userName;
            });
        }

        // Şifreyi değiştir butonuna basınca validasyon kontrol et
        document.getElementById('btnConfirmChange').addEventListener('click', function () {
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }
            // Validasyon geçtiyse onay modalını göster
            confirmModal.show();
        });

        // Onay modalındaki "Evet" butonuna basılırsa form submit
        document.getElementById('btnConfirmYes').addEventListener('click', function () {
            form.submit();
        });
    });

        document.addEventListener('DOMContentLoaded', function () {
        var changeModalEl = document.getElementById('changePasswordModal');
        var confirmModalEl = document.getElementById('confirmModal');
        var confirmModal = new bootstrap.Modal(confirmModalEl);
        var form = document.getElementById('changePasswordForm');
        var passwordInput = document.getElementById('NewPassword');

        // Kullanıcı bilgilerini doldur
        changeModalEl.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var userId = button.getAttribute('data-userid');
            var userName = button.getAttribute('data-username');

            changeModalEl.querySelector('input[name="UserID"]').value = userId;
            changeModalEl.querySelector('#UserName').textContent = userName;
            form.classList.remove('was-validated');
        });

        // Rastgele şifre üret
        document.getElementById('btnGeneratePassword').addEventListener('click', function () {
            var password = Array.from({length: 10}, () =>
                String.fromCharCode(Math.floor(Math.random() * (126 - 33)) + 33)
            ).join('');
            passwordInput.value = password;
            passwordInput.type = 'text'; // otomatik göster
        });

        // Şifre göster/gizle
        document.getElementById('btnTogglePassword').addEventListener('click', function () {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
        });

        // Şifreyi değiştir butonuna basınca validasyon ve onay modalı
        document.getElementById('btnConfirmChange').addEventListener('click', function () {
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }
            // Change modalı gizle
            var bsChangeModal = bootstrap.Modal.getInstance(changeModalEl);
            bsChangeModal.hide();
            // Confirm modalı göster
            confirmModal.show();
        });

        // Onay modalında Evet butonu -> submit
        document.getElementById('btnConfirmYes').addEventListener('click', function () {
            form.submit();
        });

        // Onay modalı kapandığında change modalı tekrar aç
        confirmModalEl.addEventListener('hidden.bs.modal', function () {
            var bsChangeModal = new bootstrap.Modal(changeModalEl);
            bsChangeModal.show();
        });
    });
</script>


